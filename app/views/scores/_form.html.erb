<%= form_for [@match, @score] do |f| %>
	<div class="field">
		<%= f.label :player_id, 'Player' %>
		<%= f.select(:player_id, options_for_select( @match.players.map {|n| [n.username,n.id]} )) %>
	</div>

	<%= f.hidden_field :hole_id, :value => hole.id %>
	
	<div class="field">
		<%= f.label :score, 'Strokes' %>
		<%= f.text_field :score, :size => 2 %>
	</div>
	
	<div class="action">
		<%= f.submit 'Add to Score', :class => 'btn btn-primary' %>
	</div>
<% end %>