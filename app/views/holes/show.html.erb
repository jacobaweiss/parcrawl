<div class="row">
	<div class="span8 offset2">
		<h1><%= @hole.name %></h1>
	</div>
</div>
<br /><br />
<div class="row">
	<div class="span8 offset2">
		<div class="score-title">
			<h2>Scores for <%= @hole.name %></h2>
			<hr />
		</div>
		<% @hole.match.players.each do |p| %>
			<div class="row">
				<div class="span4">
					<h2><%= p.username %></h2>
				</div>
				<div class="span2 offset2">
					<h3>
						Strokes: 
						<%=  p.hole_score(@hole) %>
					</h3>
				</div>
			</div>
		<% end %>
	</div>
</div>