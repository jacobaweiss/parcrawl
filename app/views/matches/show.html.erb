<div class="row match-head hidden-phone">
		<h1><%= @match.name %></h1>
		<p><%= @taglines.sample %></p>
</div>

<div class="row match-head visible-phone">
		<h1><%= @match.name %></h1>
		<p><%= @taglines.sample %></p>
</div>

<hr />
<div class="row match-content">
	<div class="span6 offset1">
		<div class="row">
			<div class="score-title">
				<h2>Leaderboard</h2>
			</div>
		</div>

		<% if @players %>
			<% @players.each_with_index do |p, i| %>
				<div class="row">
					<div class="span3">
						<h3><%= "#{i+1}. " %><%= link_to p.username, match_player_path(@match, p) %></h3>
					</div>
					<div class="span2 offset1">
						<h4>
							Strokes: 
							<score class="<%= p.over_or_under_par?(@match) %>">
								<%= p.match_score_relative_to_par %>
							</score>
							<span class="pull-right">(<%= p.match_score %>)</span>
						</h4>
					</div>
				</div>
				<div class="row hidden-phone player-facts" >
					<div class="span4">
						<strong>Last hole played</strong>: <%= p.last_hole_played %><br />
						<strong>Most recent penalty</strong>: <%= p.most_recent_penalty %>
					</div>
				</div>
			<% end %>
		<% end %>
		<div class="row">
			<div class="new-player-form">
				<%= render "players/form" %>
			</div>
		</div>
		<hr class="leader-line"/>
	</div>
	
	<div class="span4 offset1">
		<div class="row">
			<div class="row">
				<div class="holes-title">
					<h2>Course Holes</h2>
				</div>
			</div>
			<%= link_to 'Add a hole', new_match_hole_path(@match) %>
			<% @match.holes.order("hole_number ASC").each do |h| %>
				<div class="row">
					<div class="span4">
							<h3><%= h.hole_number %>. <%= link_to h.name, [@match, h] %></h3>
					</div>		
				</div>
				<div class="row">
					<div class="span2">
						<h4>Par <%= h.par %>: <%= h.drink %></h4>
					</div>
					<div class="span2">
						Last played by: <%= h.scores.last.player.username %>
					</div>
				</div>
				
			<% end %>
		</div>
		<div class="row"><hr /></div>
		<div class="row">
			<div class="row">
				<div class="holes-title">
					<h2>Penalties</h2>
				</div>
			</div>
			<%= link_to 'Add a Penalty', new_match_penalty_path(@match) %>
			<% if @match.penalties %>
				<% @match.penalties.each do |p| %>
					<div class="row">
						<h3 class="span8"><%= "-#{p.strokes} Strokes for #{p.player.username}" %></h3>
						<div class="span8">
							<%= p.offense %>
						</div>
					</div>
				<% end %>
			<% end %>
			<hr />
		</div>
	</div>
</div>