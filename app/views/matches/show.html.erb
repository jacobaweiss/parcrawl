<div class="span8 offset2">
	<div class="row">
		<div class="hero-unit match-hero">
			<h1><%= @match.name %></h1>
			<p><%= @taglines.sample %></p>
		</div>
	</div>

	<p>
		<div class="row">
			<div class="score-title">
				<h2>Leaderboard</h2>
				<hr />
			</div>
		</div>
	
		<% if @players %>
			<% @players.each_with_index do |p, i| %>
				<div class="row">
					<div class="span4">
						<h3><%= "#{i+1}. " %><%= link_to p.username, match_player_path(@match, p) %></h3>
					</div>
					<div class="span2 offset2">
						<h3>
							Strokes: 
							<score class="<%= p.over_or_under_par?(@match) %>">
								<%= p.match_score_relative_to_par(@match) %>
							</score>
						</h3>
					</div>
				</div>
			<% end %>
		<% end %>
		<div class="row">
			<div class="well span3 offset2 new-player-form">
				<%= render "players/form" %>
			</div>
		</div>
	</p>

	<p>
		<div class="row">
			<div class="holes-title">
				<h2>Course Holes</h2>
				<hr />
			</div>
		</div>
	
		<% @match.holes.order("hole_number ASC").each do |h| %>
			<div class="row">
				<div class="span4">
					<h3><%= h.hole_number %>. <%= link_to h.name, [@match, h] %></h2>
				</div>
				<div class="span2 offset2">
					<h3>Par <%= h.par %>: <%= h.drink %></h3>
				</div>
			</div>
		<% end %>
		<br />
		<%= link_to 'Add a hole', new_match_hole_path(@match) %>
	</p>

	<p>
		<div class="row">
			<div class="holes-title">
				<h2>Penalties</h2>
				<hr />
			</div>
		</div>
		<%= link_to 'Add a Penalty', new_match_penalty_path(@match) %>
		<% if @match.penalties %>
			<% @match.penalties.each do |p| %>
				<div class="row">
					<h3><%= "-#{p.strokes} Strokes for #{p.player.username}" %></h3><br />
					<p><%= p.offense %></p>
				</div>
			<% end %>
		<% end %>
	</p>
</div>